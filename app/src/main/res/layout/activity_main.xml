<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/main_header_selector">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="M Y  P O E M"
            android:textColor="@color/colorAccent" />
        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_box"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/mytitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="TITLE"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/my_hint"/>

            <EditText
                android:id="@+id/mywriter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="WRITER"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/my_hint"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/mypoem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:minHeight="300dp"
                android:textSize="15sp"
                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="~ S A V E ~"
            android:layout_marginBottom="20dp"
            android:onClick="savebtn"
            android:textColor="@color/colorAccent"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="P O E M  L I S T"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_gravity="center_horizontal"/>

        <ListView
            android:id="@+id/poemlist"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_margin="10dp">
        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp"
            android:textSize="9dp"
            android:text="이 어플리케이션은 UNIST 문학과창의성 'Yun Dongju'을 모티브로 제작되었습니다."/>
    </LinearLayout>
</ScrollView>